            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("QUY HOẠCH XÂY DỰNG TỈNH QUẢNG NAM", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" id="menu_header">
                <ul class="nav navbar-nav">
                    <li class="wbypercent_5">
                        <a id="home" title="Trở lại vị trí ban đầu của bản đồ">&nbsp;<i class="fa fa-home fa-lg"></i>&nbsp;</a>
                    </li>

                    @{
                        List<DoAnQuyHoach> ListDoAnQuyHoach, ListDoAnQuyHoachLayYKien, ListDoAnQuyHoachCongBo;
                        DoAnQuyHoach doAnQuyHoach;
                        List<LoaiQuyHoach> listDoAn;
                        List<ListDoAn> ListThongTinDoAn;
                        LoaiQuyHoach loai;
                        ListDoAn doAnChiTiet;
                        ListDoAnQuyHoach = (List<DoAnQuyHoach>)ViewBag.TTQH_control;
                        ListDoAnQuyHoachLayYKien = (List<DoAnQuyHoach>)ViewBag.TTQH_control_LayYKien;
                        ListDoAnQuyHoachCongBo = (List<DoAnQuyHoach>)ViewBag.TTQH_control_CongBo;
                    }


                    <li class="dropdown wbypercent">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            THÔNG TIN QUY HOẠCH
                        </a>
                        <ul class="dropdown-menu" id="DanhMucDoAnQH">

                            @for (int d = 0; d < ListDoAnQuyHoach.Count; d++)
                            {
                                doAnQuyHoach = ListDoAnQuyHoach[d];

                                <li class="dropdown-submenu">
                                    <a class="TTQH_control" alt="@doAnQuyHoach.MaQuanHuyen">@doAnQuyHoach.TenQuanHuyen</a>

                                    @{
                                        listDoAn = doAnQuyHoach.ListLoaiQuyHoach;
                                        if (listDoAn.Count > 0)
                                        {
                                            <ul class="dropdown-menu">
                                                @for (int i = 0; i < listDoAn.Count; i++)
                                                {
                                                    loai = listDoAn[i];
                                                    ListThongTinDoAn = loai.ListThongTinDoAn;

                                                    <li class="dropdown-submenu">
                                                        <a tabindex="-1" href="#@loai.MaLoaiQuyHoach">@loai.TenLoaiQuyHoach</a>

                                                        @if (ListThongTinDoAn.Count > 0)
                                                        {

                                                            <ul class="dropdown-menu">
                                                                @for (int y = 0; y < ListThongTinDoAn.Count; y++)
                                                                {
                                                                    doAnChiTiet = ListThongTinDoAn[y];
                                                                    <li><a class="call_bandoquyhoach" href="#" title="@doAnChiTiet.MaDoAn">@doAnChiTiet.TenDoAn</a></li>
                                                                }
                                                            </ul>
                                                        }
                                                    </li>
                                                }
                                            </ul>
                                        }
                                    }
                                </li>

                                        }

                        </ul>
                    </li>

                    <li class="dropdown wbypercent">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            LẤY Ý KIẾN QUY HOẠCH
                        </a>
                        <ul class="dropdown-menu" id="DanhMucDoAnQHLayYKien">

                            @for (int d = 0; d < ListDoAnQuyHoachLayYKien.Count; d++)
                            {
                                doAnQuyHoach = ListDoAnQuyHoachLayYKien[d];

                                <li class="dropdown-submenu">
                                    <a class="TTQH_control" alt="@doAnQuyHoach.MaQuanHuyen">@doAnQuyHoach.TenQuanHuyen</a>

                                    @{
                                        listDoAn = doAnQuyHoach.ListLoaiQuyHoach;
                                        if (listDoAn.Count > 0)
                                        {
                                            <ul class="dropdown-menu">
                                                @for (int i = 0; i < listDoAn.Count; i++)
                                                {
                                                    loai = listDoAn[i];
                                                    ListThongTinDoAn = loai.ListThongTinDoAn;

                                                    <li class="dropdown-submenu">
                                                        <a tabindex="-1" href="#@loai.MaLoaiQuyHoach">@loai.TenLoaiQuyHoach</a>

                                                        @if (ListThongTinDoAn.Count > 0)
                                                        {

                                                            <ul class="dropdown-menu">
                                                                @for (int y = 0; y < ListThongTinDoAn.Count; y++)
                                                                {
                                                                    doAnChiTiet = ListThongTinDoAn[y];
                                                                    <li>
                                                                        <a>
                                                                            <p class="call_bandoquyhoach_layykien" alt="@doAnChiTiet.MaDoAn" title="@doAnChiTiet.TenDoAn">@doAnChiTiet.TenDoAn</p>
                                                                        </a>
                                                                    </li>

                                                                }
                                                            </ul>
                                                        }
                                                    </li>
                                                }
                                            </ul>
                                        }
                                    }
                                </li>

                                        }

                        </ul>
                    </li>
                    <li class="dropdown wbypercent">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            CÔNG BỐ QUY HOẠCH
                        </a>
                        <ul class="dropdown-menu" id="DanhMucDoAnQHCongBo">


                            @for (int d = 0; d < ListDoAnQuyHoachCongBo.Count; d++)
                            {
                                doAnQuyHoach = ListDoAnQuyHoachCongBo[d];

                                <li class="dropdown-submenu">
                                    <a class="TTQH_control" alt="@doAnQuyHoach.MaQuanHuyen">@doAnQuyHoach.TenQuanHuyen</a>

                                    @{
                                        listDoAn = doAnQuyHoach.ListLoaiQuyHoach;
                                        if (listDoAn.Count > 0)
                                        {
                                            <ul class="dropdown-menu">
                                                @for (int i = 0; i < listDoAn.Count; i++)
                                                {
                                                    loai = listDoAn[i];
                                                    ListThongTinDoAn = loai.ListThongTinDoAn;

                                                    <li class="dropdown-submenu">
                                                        <a tabindex="-1" href="#@loai.MaLoaiQuyHoach">@loai.TenLoaiQuyHoach</a>

                                                        @if (ListThongTinDoAn.Count > 0)
                                                        {

                                                            <ul class="dropdown-menu">
                                                                @for (int y = 0; y < ListThongTinDoAn.Count; y++)
                                                                {
                                                                    doAnChiTiet = ListThongTinDoAn[y];
                                                                    <li>
                                                                        <a>
                                                                            <p class="call_bandoquyhoach_congbo" alt="@doAnChiTiet.MaDoAn" title="@doAnChiTiet.TenDoAn">@doAnChiTiet.TenDoAn</p>
                                                                        </a>
                                                                    </li>
                                                                }
                                                            </ul>
                                                        }
                                                    </li>
                                                }
                                            </ul>
                                        }
                                    }
                                </li>

                                        }

                        </ul>
                    </li>
                    <li id="" class="wbypercent"><a href="@Url.Action("QuanLyLuuTruQuyHoach")" title="Lưu trữ hồ sơ quy hoạch">LƯU TRỮ QUY HOẠCH</a></li>
                    <li class="dropdown wbypercent">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            TRA CỨU
                        </a>
                        <ul class="dropdown-menu">
                            <li><a id="TraCuuDoAnQuyHoach">Đồ án quy hoạch</a></li>
                            <li><a id="TraCuuHoTroCapPhep">Hỗ trợ xin/cấp phép xây dựng</a></li>
                            <li><a id="LuaChonDiaDiemDauTu">Lựa chọn địa điểm đầu tư</a></li>
                        </ul>
                    </li>
                    @*<li class="dropdown wbypercent">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                             THỐNG KÊ </a>
                            <ul class="dropdown-menu">
                                <li id="staticButton_HTSDD"><a href="#">Dữ liệu hiện trạng sử dụng đất</a></li>
                                <li id="staticButton_QHSDD"><a href="#">Dữ liệu quy hoạch sử dụng đất</a></li>
                            </ul>
                        </li>*@
                    <li class="wbypercent_5">
                        <a id="btfrm_PrintData" title="In bản đồ ra các định dạng">&nbsp;<i class="fa fa-print fa-lg"></i>&nbsp;</a>
                    </li>

                </ul>
            </div>
        </div>
    </div>

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Content/fancyBox/jquery.fancybox.min.js"></script>
    <script type="text/javascript">
        var package_path = window.location.pathname.substring(0, window.location.pathname.lastIndexOf('/'));
        var dojoConfig = {
            packages: [{
                name: "application",
                location: package_path + '/bootstrap-map-js/src/js'
            }]
        };
    </script>
    <script src="https://js.arcgis.com/3.22/"></script>
    @*<script src="~/bootstrap-map-js/src/js/bootstrapmap.js"></script>*@
    @RenderSection("scripts", required: false)


    <script type="text/javascript">

        $(document).ready(function () {
            var height = $(window).height();
            var width = $(window).width();

            if (width > 768) {
                $(".navbar-brand").css('display', 'none');
                var h_header = $("#header").height();
                height = height - h_header;
                $("#mapDiv").css("height", height + "px");
            }
            else {
                height = height - 34;
                $("#mapDiv").css("height", height + "px");
            }

            $("#DanhMucHoSoQHCongBo_panel").on("focusin", function () {
                $("a.item").fancybox({
                    'width': 600, // or whatever
                    'height': 200,
                    'type': 'iframe'
                });
            });
            $("#DanhMucHoSoQHLayYKien_panel_content").on("focusin", function () {
                $("a.item").fancybox({
                    'width': 600, // or whatever
                    'height': 200,
                    'type': 'iframe'
                });
            });

            $("#messageBoxInforMap").slideUp();
            $("#ResultDataSearch").slideUp();

        });

    </script>
    <div id="loadingpageDiv" style="display:none;">
        <div>
            <img src="~/Content/img/please_wait.gif" />
            <h4>Vui lòng đợi giây lát</h4>
        </div>
    </div>


    <div id="messageBox" style="display:none;">
        <h3 class="panel-title">Bản đồ GIS</h3>
        <span class="btn-danger label pull-right closePanelmessageBox" title="Đóng"><i class="fa fa-times" aria-hidden="true"></i></span>
        <img src="~/Content/img/please_wait.gif" />
