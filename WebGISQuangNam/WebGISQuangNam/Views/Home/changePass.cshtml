@model WebGISQuangNam.Models.dataHelper.ChangePassUser

@{
    ViewBag.Title = "Đổi mật khẩu người dùng";
    Layout = "~/Views/Shared/_LayoutNormal.cshtml";
}

<link href="~/Content/loginform.css" rel="stylesheet" />

<div class="container-fluid">

    <div class="row">
        <div class="col-md-12">
            <h4 style="font-weight: 700;padding: 20px;">Thay đổi mật khẩu đăng nhập của người dùng trong hệ thống</h4>
            <hr />
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-xs-6 col-sm-6">

            <div class="login-page">
                <div class="form">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.EditorFor(model => model.oldpass, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mật khẩu cũ" } })
                            @Html.ValidationMessageFor(model => model.oldpass, "", new { @class = "text-danger" })
                            @Html.EditorFor(model => model.pass, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mật khẩu mới" } })
                            @Html.ValidationMessageFor(model => model.pass, "", new { @class = "text-danger" })
                            @Html.EditorFor(model => model.c_pass, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập lại mật khẩu mới" } })
                            @Html.ValidationMessageFor(model => model.c_pass, "", new { @class = "text-danger" })
                            <button type="submit" value="Đổi mật khẩu" class="btn btn-danger">Đổi mật khẩu</button>
                        
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
